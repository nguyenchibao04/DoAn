    <!-- JS -->
    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>

    <script>
        $(document).ready(function () {
            // Đăng nhập
            $("#login-form").submit(function (e) {
                e.preventDefault();
                $.post("/Login/DangNhap",
                    {
                        email: $("#login-email").val(),
                        password: $("#login-password").val()
                    },
                    function (res) {
                        if (res.success) {
                            toastr.success(res.message);
                            setTimeout(function () {
                                if (res.isAdmin) {
                                    window.location.href = "/Admin/Login";
                                } else {
                                    window.location.href = "/";
                                }
                            }, 2000);
                        } else {
                            toastr.error(res.message);
                        }
                    }
                );
            });

            // Đăng ký
            $("#register-form").submit(function (e) {
                e.preventDefault();
                var hoten = $("#hoten").val();
                var mail = $("#email").val();
                var pass1 = $("#password1").val();
                var pass2 = $("#password2").val();

                if (!hoten || !mail || !pass1 || !pass2) {
                    toastr.warning("Vui lòng nhập đầy đủ thông tin");
                    return;
                }

                $.post("/Login/DangKy", { hoten: hoten, email: mail, pass: pass1, repass: pass2 }, function (result) {
                    if (result.success) {
                        toastr.success(result.message);
                        setTimeout(function () { window.location.reload(); }, 2000);
                    } else {
                        toastr.error(result.message);
                    }
                });
            });
        });
    </script>
