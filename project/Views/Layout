    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script>
    $(document).ready(function () {
        // Lấy controller và action từ Razor
        var controller = '@ViewContext.RouteData.Values["controller"]'.toLowerCase();
        var action = '@ViewContext.RouteData.Values["action"]'.toLowerCase();

        // Kiểm tra nếu đang ở Home/Index
        if (controller === "home" && action === "index") {
            $(window).on("scroll", function () {
                if ($(this).scrollTop() > 100) {
                    $('.dropdown-menu').removeClass('show');
                } else {
                    $('.dropdown-menu').addClass('show');
                }
            });
        } else {
            // Nếu không phải trang chủ, ẩn luôn menu
            $('.dropdown-menu').removeClass('show');
        }
    });
    </script>


