@model WebApplication17.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/sanphams" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/admin/sanphams">Quản lý sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm thêm mới</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "Sanphams", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Hãng sản phẩm</label>
                                    @Html.DropDownList("mahang", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.mahang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên sản phẩm</label>
                                    @Html.EditorFor(model => model.tensp, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.tensp, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Model sản phẩm</label>
                                    @Html.EditorFor(model => model.model, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.model, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Số lượng</label>
                                    @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.soluong, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Giá bán</label>
                                    @Html.EditorFor(model => model.giaban, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.giaban, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">RAM</label>
                                    @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.RAM, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Hệ điều hành (OS)</label>
                                    @Html.EditorFor(model => model.OS, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.OS, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">CPU</label>
                                    @Html.EditorFor(model => model.CPU, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CPU, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Card đồ họa</label>
                                    @Html.EditorFor(model => model.carddohoa, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.carddohoa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Ổ cứng (SSD)</label>
                                    @Html.EditorFor(model => model.SSD, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SSD, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Màn hình</label>
                                    @Html.EditorFor(model => model.manhinh, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.manhinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Hình ảnh</label>
                            <br />
                            <div id="preview">
                                <img id="output" class="img-thumbnail" src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" width="200" height="200" />
                            </div>
                            <p><label for="ufile" style="cursor:pointer">Chọn hình ảnh</label></p>
                            <input type="file" id="ufile" name="ImageUpload" multiple accept="image/*" style="display: none" onchange="previewImages(event)" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mô tả</label>
                            @Html.TextAreaFor(model => model.mota, new { @class = "form-control TextareCustom", id = "mota" })
                            @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Trạng thái</label>
                            @Html.DropDownListFor(model => model.trangthai, (IEnumerable<SelectListItem>)ViewBag.TrangThaiList,
                                     htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsHotDeal, "Hot Deal", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.CheckBox("IsHotDeal", Model?.IsHotDeal ?? false)
                            </div>
                        </div>

                        </div>
                        <br />

                        <div class="form-group">
                            <input type="submit" value="Thêm mới" class="btn btn-primary" />
                            <a href="/admin/sanphams" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>

<script src="https://cdn.ckeditor.com/4.20.2/standard/ckeditor.js"></script>

<script>var loadImage = function (event) {
        var image = document.getElementById("output");
        image.src = URL.createObjectURL(event.target.files[0]);
    }</script>

<script>
    CKEDITOR.replace('mota', {
        height: 300,
        toolbar: [
            { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike', 'RemoveFormat'] },
            { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent'] },
            { name: 'links', items: ['Link', 'Unlink'] },
            { name: 'insert', items: ['Image', 'Table', 'HorizontalRule'] },
            { name: 'styles', items: ['Styles', 'Format'] },
            { name: 'tools', items: ['Maximize'] }
        ],
        removePlugins: 'elementspath',
    });

        function previewImages(event) {
        var preview = document.getElementById("preview");
        preview.innerHTML = ""; // clear preview cũ
        for (let i = 0; i < event.target.files.length; i++) {
            let img = document.createElement("img");
        img.src = URL.createObjectURL(event.target.files[i]);
        img.classList.add("img-thumbnail");
        img.style.width = "150px";
        img.style.margin = "5px";
        preview.appendChild(img);
        }
    }

 </script>