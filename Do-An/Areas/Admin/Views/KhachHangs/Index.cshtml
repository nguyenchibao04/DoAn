<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/Home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản lý tài khoản</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" style="padding-right:20px"><b>Danh sách tài khoản</b></h3>


            <div class="card-tools">
                <a href="/admin/khachhangs/create" class="btn btn-primary">Thêm mới</a>
            </div>
            <form action="/admin/khachhangs/index" method="get" class="form-inline">
                <input type="number" name="searchMaKH" value="@ViewBag.SearchMaKH"
                       class="form-control mr-2" placeholder="Mã khách hàng" />

                <input type="text" name="searchHoTen" value="@ViewBag.SearchHoTen"
                       class="form-control mr-2" placeholder="Họ tên" />

                <button type="submit" class="btn btn-primary mr-2">
                    <i class="fas fa-search"></i>
                </button>
                <a href="/admin/khachhangs/index" class="btn btn-secondary">
                    <i class="fas fa-sync"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Họ tên</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                        <th style="width: 300px">Địa chỉ</th>
                        <th>Chức vụ</th>
                        <th>Trạng thái</th>
                        <th>Thực hiện</th>
                    </tr>
                </thead>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @i <br />
                                <small style="color:gray">#@item.makhachhang</small> <!-- hiển thị mã sản phẩm -->
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hoten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dienthoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.Raw(new string('*', item.matkhau.Length))
                            </td>
                            <td>
                                @{
                                    string dc = " " + item.thon + ", " + item.xa + ", " + item.huyen + ", " + item.tinh;
                                }
                                @dc
                            </td>
                            @if (item.chucvu == true)
                            {
                                <td>
                                    Nhân viên
                                </td>
                            }
                            else
                            {
                                <td>Khách hàng</td>
                            }

                            @if (item.trangthai == true)
                            {
                                <td class="text-danger">
                                    Khóa
                                </td>
                            }
                            else
                            {
                                <td class="text-success">Hoạt động</td>
                            }
                            <td>
                                <a href="/admin/khachhangs/edit/@item.makhachhang" class="btn btn-primary">Sửa</a>
         
                                <input type="button" data-id="@item.makhachhang" class="delete btn btn-danger" value="Xóa" />
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Không có bản ghi nào!!!</td>
                    </tr>
                }
            </table>
        </div>
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchMaKH = ViewBag.SearchMaKH, searchHoTen = ViewBag.SearchHoTen }))
        </div>

    </div>


</section>

<script>
    $(document).ready(function(){
        $('.delete').click(function () {
            var customerId = $(this).data('id');
            if (confirm("Bạn có chắc muốn xóa tài khoản này?")) {
                $.ajax({
                    url: '@Url.Action("DeleteConfirmed", "KhachHangs")',
                    type: 'POST',
                    data: { id: customerId },
                    success: function (result) {
                        if (result.success) {
                            alert("Xóa thành công");
                            window.location.reload();
                        }
                        else {
                            alert("Xóa tài khoản thất bại");
                        }
                    },
                    Error: function () {
                        alert("Đã xảy ra lỗi!");
                    }
                });
            }
        });
    });
</script>