                    </li>
                    <li>
                        @if (Session["ma"] == null)
                        {
                            <a href="~/Login">Đăng Nhập / Đăng Ký</a>
                        }
                        else
                        {
                            <a href="~/KhachHangs/UserInfor">Xin Chào: @Session["hoten"]</a>
                            <ul>
                                <li><a href="~/DonHangs">Đơn Mua</a></li>
                                <li><a href="~/Login/SignOut">Đăng Xuất</a></li>
                            </ul>
                        }
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</body>
</html>
