@model IEnumerable<WebApplication17.Models.GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal TienHang = 0;
    Session["flag"] = 0;
}

<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
            </ol>
        </div>
    </nav>

    <div class="page-content">
        <div class="cart">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-cart table-mobile">
                            <thead>
                                <tr>
                                    <th style="width: 500px;">Sản Phẩm</th>
                                    <th>Giá Bán</th>
                                    <th>Số Lượng</th>
                                    <th class="text-center">Thành Tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        if (item.makhachhang.ToString() == Session["ma"].ToString())
                                        {
                                            Session["flag"] = 0;
                                            <tr>
                                                <td class="product-col">
                                                    <div class="product">
                                                    <figure class="product-media">
                                                        <a href="#">
                                                            @{
                                                                var firstImg = item.SanPham.hinhanh?.Split(';')[0]; // tách ảnh đầu tiên
                                                            }
                                                            <img src="@Url.Content("~/wwwroot/images/" + firstImg)" alt="Product image">
                                                        </a>
                                                    </figure>
                                                        <h3 class="product-title">
                                                            <a href="#">@item.SanPham.tensp</a>
                                                        </h3>
                                                        <div class="text-muted">@item.CauHinhThem</div>
                                                    </div>
                                                </td>
                                                <td class="price-col">
                                                    @{
                                                        decimal gia = item.giaban ?? 0;
                                                        string giaformat = gia.ToString("#,##0");
                                                    }
                                                    @giaformat
                                                </td>
                                                <td class="quantity-col">
                                                    <div class="cart-product-quantity soluong"
                                                         data-soluongsp="@item.SanPham.soluong"
                                                         data-cart-id="@item.magiohang"
                                                         data-product-id="@item.masp"
                                                         data-user-id="@item.makhachhang">
                                                        <input type="number" class="form-control"
                                                               value="@item.soluong"
                                                               min="1"
                                                               max="@item.SanPham.soluong"
                                                               step="1" required />
                                                    </div>
                                                </td>
                                                <td class="total-col">
                                                    @{
                                                        decimal total = (item.giaban ?? 0) * item.soluong;
                                                        string totalformat = total.ToString("#,##0");
                                                        TienHang += total;
                                                    }
                                                    @totalformat
                                                </td>
                                                <td class="remove-col">
                                                    <button class="btn-remove" data-cart-id="@item.magiohang">
                                                        <i class="icon-close"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            Session["flag"] = 1;
                                        }
                                    }
                                }
                            </tbody>
                        </table>

                        @if ((int)Session["flag"] == 0)
                        {
                            <div class="cart-bottom">
                                <div class="cart-total mb-3">
                                    <strong>Tổng tiền hàng: </strong> @TienHang.ToString("#,##0") đ
                                </div>
                                <a href="~/GioHangs/ThanhToan" class="btn btn-outline-dark-2" style="height: 50px;">
                                    <span>Thanh Toán</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    $(document).ready(function () {
        // Xóa sản phẩm
        $('.btn-remove').click(function () {
            var cartId = $(this).data('cart-id');
            $.ajax({
                url: '@Url.Action("RemoveCart", "GioHangs")',
                type: 'POST',
                data: { magiohang: cartId },
                success: function (result) {
                    if (result.success) { location.reload(); }
                },
                error: function () { alert('Đã xảy ra lỗi!'); }
            });
        });

        // Cập nhật số lượng
        $('.soluong input').on('change', function () {
            var input = $(this);
            var sl = parseInt(input.val());
            var slcon = parseInt(input.closest('.soluong').data('soluongsp'));
            var cartId = input.closest('.soluong').data('cart-id');
            var productId = input.closest('.soluong').data('product-id');
            var userId = input.closest('.soluong').data('user-id');

            if (sl > slcon) {
                toastr.warning("Số lượng hàng không đủ");
                input.val(slcon);
                return;
            }
            if (sl < 1) { input.val(1); return; }

            $.ajax({
                url: '@Url.Action("UpdateCart", "GioHangs")',
                type: 'POST',
                data: { magiohang: cartId, masp: productId, makhachhang: userId, soluong: sl },
                success: function (result) { if (result.success) { location.reload(); } },
                error: function () { alert('Đã xảy ra lỗi!'); }
            });
        });
    });
</script>

